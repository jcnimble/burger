<div class="container">
  <div id="burgerHead" class="container">
    <img src="../assets/img/burger.png" class="rounded mx-auto d-block" alt="burger">
    <h1>Eat Da Burger</h1>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div id="toEat" class="col-md-4">
      <h3>To Eat!</h3>
      <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block-eat}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div id="done" class="col-md-4">
      <h3>Done!</h3> 
      <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block-delete}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-2"></div>
  </div>


  <div class="row">
    <div id="addBurg" class="col-med-12">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bn">Burger Name:</label>
          <input type="text" id="bn" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>